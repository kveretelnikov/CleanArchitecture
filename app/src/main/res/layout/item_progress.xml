<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/progress_window_height"
    android:minWidth="@dimen/progress_window_width"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/progress_padding"
    android:paddingStart="@dimen/progress_padding">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/progress_name_padding_start"
        android:text="@string/progress_loading" />
</LinearLayout>